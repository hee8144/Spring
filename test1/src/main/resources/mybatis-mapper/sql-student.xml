<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.test1.mapper.StudentMapper">
	<select id="stuInfo" parameterType="hashmap" resultType="com.example.test1.model.Student">
		SELECT *
		FROM STUDENT
		WHERE STU_NAME = #{keyword}
	</select>
	
	<select id="stuList" parameterType="hashmap" resultType="com.example.test1.model.Student">
		SELECT *
		FROM STUDENT
	</select>
	
	<delete id="removeStudent" parameterType="hashmap">
		DELETE FROM STUDENT WHERE STU_NO = #{stuNo}
	</delete>
	
	<delete id="removeStudentList" parameterType="hashmap">
		DELETE FROM STUDENT WHERE STU_NO IN 
		<foreach collection="list" item="item" index="index" open="(" close=")" separator=",">
			#{item}
		</foreach>
	</delete>
	
	<select id="stu" parameterType="hashmap" resultType="com.example.test1.model.Student" >
		SELECT S.STU_NO, STU_DEPT, STU_NAME , AVG(ENR_GRADE) AS AVG_GRADE , (SELECT ROUND(AVG(ENR_GRADE),1)FROM ENROL) AS TOTAL_AVG
		FROM STUDENT S
		LEFT JOIN  ENROL E ON S.STU_NO = E.STU_NO 
		GROUP BY S.STU_NO , STU_NAME, STU_DEPT 
		HAVING S.STU_NO = #{stuNo}
	</select>
	
	<update id="updateStu" parameterType="hashmap">
		UPDATE STUDENT SET STU_DEPT = #{stuDept} WHERE STU_NO = #{stuNo}
	</update>
	
	
	
</mapper>